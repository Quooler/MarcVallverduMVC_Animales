@model Animal
@{
    ViewData["Title"] = "Crear";
}

<h1 class="text-center">Crear animal</h1>

<div class="text-center">
    <form asp-action="crear" asp-controller="animal" method="post" asp-antiforgery="true">
        <div asp-validation-summary="All" class="text-danger"></div>
        
        <div class="form-group">
            <label asp-for="IdAnimal"></label>
            <input asp-for="IdAnimal" class="form-control" />
            <span asp-validation-for="IdAnimal" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
